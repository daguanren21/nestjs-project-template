{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:base",
      ":dependencyDashboard"
    ],
    "labels": ["dependencies"],
    "schedule": ["every weekend"],
    "lockFileMaintenance": {
      "enabled": true,
      "schedule": ["before 5am on monday"]
    },
    "packageRules": [
      {
        "matchPackageNames": ["node"],
        "enabled": false
      },
      {
        "matchUpdateTypes": ["minor", "patch"],
        "automerge": true
      }
    ]
  }